<!DOCTYPE html>
<html lang="en">
  <%- include('baseTemplateHead', {title}) %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2">
              <%- include('baseTemplateNav') %> 
        </div>

        <div class="col-sm-10">
          <h1><%= title %></h1>

          <form method="POST">
            <div class="form-group">
              <label for="name">Genre: </label>
              <input
                type="text"
                id="name"
                class="form-control"
                placeholder="Fantasy, Poetry, etc."
                name="name"
                required
                value="<%= genre === undefined ? '' : genre.name %>"
              />

              <button class="btn btn-primary" type="submit">Submit</button>
            </div>
          </form>


          <ul>
            <% errors.forEach(err => { %>
              <li><%= err.msg %></li>
            <%}) %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
