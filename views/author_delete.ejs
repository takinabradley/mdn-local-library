<!DOCTYPE html>
<html lang="en">
  <%- include('baseTemplateHead', {title}) %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2">
          <%- include('baseTemplateNav') %>
        </div>

        <div class="col-sm-10">
          <h1><%= title %> <% author.name %></h1>
          <p><%= author.lifespace %></p>

          <% if (author_books.length) { %>
            <p><strong>Delete the following books before attempting to delete this author</strong></p>
            <div style="margin-left:20px;margin-top:20px">
              <dl>
                <% author_books.forEach(book => { %>
                  <dt><a href="<%= book.url %>"><%= book.title %></a></dt>
                  <dd><%= book.summary %></dd>
                <% }) %>
              </dl>
            </div>
          <% } else { %>
            <p>Do you really want to delete this Author?</p>
            <form method="POST">
              <div class="form-group">
                <input id="authorid" class="form-control" type="hidden" name="authorid" value="<%= author._id %>">
              </div>
              <button class="btn btn-primary" type="submit">Delete</button>
            </form>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
