<!DOCTYPE html>
<html>
  <%- include('baseTemplateHead', {title}) %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2">
          <%- include('baseTemplateNav') %>
        </div>

        <div class="col-sm-10">
          <h1>Genre: <%= genre.name %></h1>

          <div class="" style="margin-left: 20px; margin-top: 20px">
            <h2>Books</h2>
            <dl>
              <% genre_books.forEach(book => { %>
              <dt><a href="<%= book.url %>"><%= book.title %></a></dt>
              <dd><%= book.summary %></dd>
              <% }) %>
            </dl>

            <hr>

            <p>
              <a href="<%= genre.url + '/delete' %>">Delete Genre</a>
            </p>

            
            <p>
              <a href="<%= genre.url + '/update' %>">Update Genre</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
