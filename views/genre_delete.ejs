<!DOCTYPE html>
<html>
  <%- include('baseTemplateHead', {title}) %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2">
          <%- include('baseTemplateNav') %>
        </div>

        <div class="col-sm-10">
          <h1>Genre: <%= genre.name %></h1>

          <% if(genre_books.length > 0) { %>
            <div class="" style="margin-left: 20px; margin-top: 20px">
              <p><strong>Delete the following books before attempting to delete this genre</strong></p>
              <dl>
                <% genre_books.forEach(book => { %>
                <dt><a href="<%= book.url %>"><%= book.title %></a></dt>
                <% }) %>
              </dl>
            </div>
          <% } else { %>
              <p>Do you really want to delete this genre?</p>
              <form method="POST">
                <div class="form-group">
                  <input id="genreid" class="form-control" type="hidden" name="genreid" value="<%= genre._id %>">
                </div>
                <button class="btn btn-primary" type="submit">Delete</button>
              </form>
          <% } %>


        </div>
      </div>
    </div>
  </body>
</html>
